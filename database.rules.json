{
  "rules": {
    "users":{
      "$uid": {
        ".read": "auth.uid != null",
        ".write": "$uid === auth.uid",
      }
    },
    "conversations":{
      "$convo_id":{
        ".read": "root.child('chat_ids').child(auth.uid).child($convo_id).exists()",
        ".write": "root.child('chat_ids').child(auth.uid).child($convo_id).exists()",
      }
    },
    "chat_ids":{
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "auth.uid != null",
      }
    }
  }
}
